<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Terapeuta">
    <Button
        android:id="@+id/antecedentes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editar antecedentes"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerTerapiasporTerapeuta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/antecedentes"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foregroundGravity="bottom"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="0dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="20dp"
            android:onClick="deslogeate"
            android:shadowColor="@color/black"
            android:shadowDx="4"
            android:shadowDy="4"
            android:shadowRadius="3"
            android:text="ðŸ‘‹" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:onClick="agregarterapia"
            android:text="add service" />
    </FrameLayout>
</RelativeLayout>